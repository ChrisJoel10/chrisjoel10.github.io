---
import { siteConfig } from "../config";
---

<section id="techStack" class="p-8 sm:p-12 md:p-16 lg:p-24">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2
          class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900"
        >
          Technology Stack
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        >
        </div>
      </div>
      <div
        class="lg:col-span-8 space-y-8 bg-black font-mono rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300"
      >
        {
          siteConfig.techStack.map((skill) => (
            <div class="mb-8 border-l-2 border-green-400/20 pl-4 hover:border-green-400 transition-colors">
              <h4 class="text-green-400 text-s uppercase tracking-widest mb-3">
                {skill.category}
              </h4>
              <ul class="grid grid-cols-2 md:grid-cols-3 gap-2">
                {skill.skills.map((item) => (
                  <li class="text-slate-400 text-sm flex items-center gap-2 hover:text-green-400 transition-colors hover:translate-x-1 duration-200">
                    <span class="text-green-400/70">&gt;</span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
